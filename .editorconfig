# EditorConfig: https://EditorConfig.org

[*]
charset = utf-8
# Type of newline is managed by git in .gitattributes
insert_final_newline = true
trim_trailing_whitespace = true

[{*.{Dockerfile,js,jsx,ts,tsx},Dockerfile}]
indent_style = tab

[public/styles/**.css]
indent_style = tab

[{package.json,tsconfig.json,.vscode/settings.json}]
indent_style = space

# YAML does not allow tab indentation
[*.{yml,yaml}]
indent_style = space
indent_size = 2
